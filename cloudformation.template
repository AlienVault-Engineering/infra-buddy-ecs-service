{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "",
  "Parameters": {
    "Environment": {
      "Description": "The environment parameter for the docker container",
      "Type": "String"
    },
    "VPCStack": {
      "Description": "The stack name of the vpc to deploy",
      "Type": "String"
    },
    "ClusterStack": {
      "Description": "ECS Cluster stack name to deploy service into",
      "Type": "String"
    },
    "APIPath": {
      "Description": "The relative path for the applciation load balancer routing rule. Must use param 'CreateAPI' to be applied.",
      "Type": "String"
    },
    "DesiredCapacity": {
      "Description": "Number of instances to launch in your ECS cluster - and number of containers to run of primary container",
      "Type": "Number"
    },
    "ContainerImage": {
      "Description": "Container image to use in the ECS task definition",
      "Type": "String"
    },
    "ContainerPort": {
      "Description": "The port the API is published on",
      "Type": "Number"
    },
    "RulePriority": {
      "Description": "The priority of the listener rule to use",
      "Type": "Number"
    },
    "TaskMemory": {
      "Description": "The amount of memory for use by the task, if using fargate you must specify 0.5GB, 1GB - 30GB, otherwise use MB",
      "Type": "Number"
    },
    "TaskMemoryLimit": {
      "Description": "The max amount of memory for use by the task, it gets killed if it goes past it (ECS only)",
      "Type": "Number"
    },
    "TaskCPU": {
      "Description": "The amount of cpu units (see ecs) for use by the task, specified in 1024ths of the vCPU. If using fargate you must choose 256, 512, 1024, 2048, 4096",
      "Type": "Number"
    },
    "CreateAPI": {
      "Description": "'true' to attach to the load balancer and route traffic based on APIPath",
      "Type": "String"
    },
    "DefaultLoadBalancerTarget": {
      "Description": "'true' to attach to the load balancer as the default target.",
      "Type": "String"
    },
    "UseFargate": {
      "AllowedValues": [
        "true",
        "false"
      ],
      "Description": "'true' to use fargate, 'false' to a cluster.",
      "Type": "String"
    },
    "TaskAdditionalPolicies": {
      "Description": "List of additional ManagedPolicy ARNs to add to the Task execution role 'foo:ARN:bar, foo:ARN:bar'",
      "Type": "CommaDelimitedList"
    },
    "AssignPublicIP": {
      "Description": "Whether to assign a public IP for fargate.  ENABLED or DISABLED",
      "Type": "String",
      "AllowedValues": ["ENABLED", "DISABLED"]
    },
    "HTTPSListenerARNName": {
      "Description": "Name of exported field from cluster that defines the HTTPs listener - old clusters used different values",
      "Type": "String",
      "AllowedValues": ["HTTPSListenerARN", "SecureListenerARN"]
    },
    "HealthGraceSeconds": {
      "Description": "Number of seconds to wait before starting health checks",
      "Type": "Number"
    }
  },
  "Conditions": {
    "CreateListener": {
      "Fn::Equals": [
        {
          "Ref": "CreateAPI"
        },
        "true"
      ]
    },
    "AttachDefault": {
      "Fn::Equals": [
        {
          "Ref": "DefaultLoadBalancerTarget"
        },
        "true"
      ]
    },
    "AttachLoadBalancer": {
      "Fn::Or": [
        {
          "Condition": "CreateListener"
        },
        {
          "Condition": "AttachDefault"
        }
      ]
    },
    "UseCluster": {
      "Fn::Not": [
        {
          "Fn::Equals": [
            {
              "Ref": "UseFargate"
            },
            "true"
          ]
        }
      ]
    },
    "UseFargateCondition": {
      "Fn::Equals": [
        {
          "Ref": "UseFargate"
        },
        "true"
      ]
    },
    "AdditionalRoleARNS": {
      "Fn::Not": [
        {
          "Fn::Equals": [
            {
              "Fn::Join": [
                "",
                {
                  "Ref": "TaskAdditionalPolicies"
                }
              ]
            },
            "false"
          ]
        }
      ]
    }
  },
  "Resources": {
    "ListenerRule": {
      "Type": "AWS::ElasticLoadBalancingV2::ListenerRule",
      "Condition": "CreateListener",
      "Properties": {
        "Actions": [
          {
            "Type": "forward",
            "TargetGroupArn": {
              "Ref": "APITargetGroup"
            }
          }
        ],
        "Conditions": [
          {
            "Field": "path-pattern",
            "Values": [
              {
                "Fn::Sub": "/${APIPath}/*"
              }
            ]
          }
        ],
        "ListenerArn": {
          "Fn::ImportValue": {
            "Fn::Sub": "${ClusterStack}-ListenerARN"
          }
        },
        "Priority": {
          "Ref": "RulePriority"
        }
      }
    },
    "HTTPSListenerRule": {
      "Type": "AWS::ElasticLoadBalancingV2::ListenerRule",
      "Condition": "CreateListener",
      "Properties": {
        "Actions": [
          {
            "Type": "forward",
            "TargetGroupArn": {
              "Ref": "APITargetGroup"
            }
          }
        ],
        "Conditions": [
          {
            "Field": "path-pattern",
            "Values": [
              {
                "Fn::Sub": "/${APIPath}/*"
              }
            ]
          }
        ],
        "ListenerArn": {
          "Fn::ImportValue": {
            "Fn::Sub": "${ClusterStack}-${HTTPSListenerARNName}"
          }
        },
        "Priority": {
          "Ref": "RulePriority"
        }
      }
    },
    "APITargetGroup": {
      "Type": "AWS::ElasticLoadBalancingV2::TargetGroup",
      "Condition": "CreateListener",
      "Properties": {
        "HealthCheckPath": "/health",
        "HealthCheckIntervalSeconds": 30,
        "HealthCheckProtocol": "HTTP",
        "HealthCheckTimeoutSeconds": 10,
        "HealthyThresholdCount": 5,
        "UnhealthyThresholdCount": 2,
        "TargetType": {
          "Fn::If": [
            "UseCluster",
            {
              "Ref": "AWS::NoValue"
            },
            "ip"
          ]
        },
        "TargetGroupAttributes": [
          {
            "Key": "deregistration_delay.timeout_seconds",
            "Value": "45"
          }
        ],
        "Matcher": {
          "HttpCode": "200"
        },
        "Port": {
          "Ref": "ContainerPort"
        },
        "Protocol": "HTTP",
        "VpcId": {
          "Fn::ImportValue": {
            "Fn::Sub": "${VPCStack}-VPC"
          }
        }
      }
    },
    "ServiceIAMRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "ecs.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "ManagedPolicyArns": [
          "arn:aws:iam::aws:policy/service-role/AmazonEC2ContainerServiceRole"
        ],
        "Path": "/"
      }
    },
    "TaskIAMExecutionRole": {
      "Type": "AWS::IAM::Role",
      "Condition": "UseFargateCondition",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "ecs-tasks.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "ManagedPolicyArns": [
          "arn:aws:iam::aws:policy/service-role/AmazonECSTaskExecutionRolePolicy"
        ],
        "Path": "/"
      }
    },
    "TaskIAMRole": {
      "Type": "AWS::IAM::Role",
      "Condition": "UseFargateCondition",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "ecs-tasks.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "ManagedPolicyArns": [
          {"Fn::ImportValue": {"Fn::Sub": "${ClusterStack}-FargateTaskAccessPolicy"}}
        ],
        "Path": "/"
      }
    },
    "ELBService": {
      "Type": "AWS::ECS::Service",
      "Properties": {
        "LoadBalancers": {
          "Fn::If": [
            "AttachLoadBalancer",
            [
              {
                "ContainerName": {
                  "Fn::Sub": "${AWS::StackName}-Container"
                },
                "ContainerPort": {
                  "Ref": "ContainerPort"
                },
                "TargetGroupArn": {
                  "Fn::If": [
                    "CreateListener",
                    {
                      "Ref": "APITargetGroup"
                    },
                    {
                      "Fn::ImportValue": {
                        "Fn::Sub": "${ClusterStack}-DefaultTargetGroup"
                      }
                    }
                  ]
                }
              }
            ],
            {
              "Ref": "AWS::NoValue"
            }
          ]
        },
        "Role": {
          "Fn::If": [
            "AttachLoadBalancer",
            {
              "Fn::If": [
                "UseCluster",
                {
                  "Ref": "ServiceIAMRole"
                },
                {
                  "Ref": "AWS::NoValue"
                }
              ]
            },
            {
              "Ref": "AWS::NoValue"
            }
          ]
        },
        "HealthCheckGracePeriodSeconds": {
          "Fn::If": [
            "UseCluster",
            {"Ref": "HealthGraceSeconds"},
            {"Ref": "AWS::NoValue"},
          ]
        },
        "LaunchType": {
          "Fn::If": [
            "UseCluster",
            "EC2",
            "FARGATE"
          ]
        },
        "Cluster": {
          "Fn::ImportValue": {
            "Fn::Sub": "${ClusterStack}-ECSCluster"
          }
        },
        "NetworkConfiguration": {
          "Fn::If": [
            "UseCluster",
            {
              "Ref": "AWS::NoValue"
            },
            {
              "AwsvpcConfiguration": {
                "AssignPublicIp": {"Ref": "AssignPublicIP"},
                "SecurityGroups": [
                  {
                    "Ref": "FargateSecurityGroup"
                  }
                ],
                "Subnets": [
                  {
                    "Fn::ImportValue": {
                      "Fn::Sub": "${VPCStack}-SubnetAPriv"
                    }
                  },
                  {
                    "Fn::ImportValue": {
                      "Fn::Sub": "${VPCStack}-SubnetBPriv"
                    }
                  },
                  {
                    "Fn::ImportValue": {
                      "Fn::Sub": "${VPCStack}-SubnetCPriv"
                    }
                  }
                ]
              }
            }
          ]
        },
        "DeploymentConfiguration": {
          "MaximumPercent": 600,
          "MinimumHealthyPercent": 50
        },
        "DesiredCount": {
          "Ref": "DesiredCapacity"
        },
        "TaskDefinition": {
          "Ref": "TaskDefinition"
        }
      }
    },
    "FargateSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Condition": "UseFargateCondition",
      "Properties": {
        "GroupDescription": "Fargate Security Group",
        "VpcId": {
          "Fn::ImportValue": {
            "Fn::Sub": "${VPCStack}-VPC"
          }
        },
        "SecurityGroupIngress": [
          {
            "IpProtocol": "-1",
            "SourceSecurityGroupId": {
              "Fn::ImportValue": {
                "Fn::Sub": "${ClusterStack}-LoadBalancerSecurityGroupARN"
              }
            }
          }
        ],
        "SecurityGroupEgress": [
          {
            "IpProtocol": "-1",
            "CidrIp": "0.0.0.0/0",
            "FromPort": "1",
            "ToPort": "65535"
          }
        ]
      }
    },
    "TaskDefinition": {
      "Type": "AWS::ECS::TaskDefinition",
      "Properties": {
        "Family": {
          "Fn::Sub": "${AWS::StackName}-ECSTaskFamily"
        },
        "Memory": {
          "Fn::If": [
            "UseCluster",
            {
              "Ref": "AWS::NoValue"
            },
            {
              "Ref": "TaskMemory"
            }
          ]
        },
        "Cpu": {
          "Fn::If": [
            "UseCluster",
            {
              "Ref": "AWS::NoValue"
            },
            {
              "Ref": "TaskCPU"
            }
          ]
        },
        "ExecutionRoleArn": {
          "Fn::If": [
            "UseCluster",
            {
              "Ref": "AWS::NoValue"
            },
            {
              "Ref": "TaskIAMExecutionRole"
            }
          ]
        },
        "TaskRoleArn": {
          "Fn::If": [
            "UseFargateCondition",
            {
              "Ref": "TaskIAMRole"
            },
            {
              "Ref": "AWS::NoValue"
            }
          ]
        },
        "RequiresCompatibilities": {
          "Fn::If": [
            "UseCluster",
            {
              "Ref": "AWS::NoValue"
            },
            [
              "FARGATE"
            ]
          ]
        },
        "NetworkMode": {
          "Fn::If": [
            "UseCluster",
            {
              "Ref": "AWS::NoValue"
            },
            "awsvpc"
          ]
        },
        "ContainerDefinitions": [
          {
            "VolumesFrom": [],
            "MemoryReservation": {
              "Ref": "TaskMemory"
            },
            "Memory": {
              "Fn::If": [
                "UseCluster",
                {"Ref": "TaskMemoryLimit"},
                {"Ref": "AWS::NoValue"}
              ]
            },
            "Essential": true,
            "MountPoints": [],
            "Name": {
              "Fn::Sub": "${AWS::StackName}-Container"
            },
            "Environment": [
              {
                "Name": "ENVIRONMENT",
                "Value": {
                  "Ref": "Environment"
                }
              }
            ],
            "Image": {
              "Ref": "ContainerImage"
            },
            "Cpu": {
              "Ref": "TaskCPU"
            },
            "PortMappings": [
              {
                "ContainerPort": {
                  "Ref": "ContainerPort"
                }
              }
            ],
            "LogConfiguration": {
              "LogDriver": "awslogs",
              "Options": {
                "awslogs-group": {
                  "Ref": "LogGroup"
                },
                "awslogs-region": {
                  "Ref": "AWS::Region"
                },
                "awslogs-stream-prefix": {
                  "Fn::Sub": "${AWS::StackName}"
                }
              }
            }
          }
        ],
        "Volumes": []
      }
    },
    "LogGroup": {
      "Type": "AWS::Logs::LogGroup",
      "Properties": {
        "LogGroupName": {
          "Fn::Sub": "${AWS::StackName}-Logs"
        },
        "RetentionInDays": 120
      }
    }
  },
  "Outputs": {
    "Service": {
      "Description": "The service name of the contribution api",
      "Value": {
        "Ref": "ELBService"
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-ECSService"
        }
      }
    },
    "ECSServiceName": {
      "Description": "The service name of the contribution api",
      "Value": {
        "Fn::GetAtt": [
          "ELBService",
          "Name"
        ]
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-ECSServiceName"
        }
      }
    },
    "ECSTaskFamily": {
      "Description": "The task family",
      "Value": {
        "Fn::Sub": "${AWS::StackName}-ECSTaskFamily"
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-ECSTaskFamily"
        }
      }
    },
    "ECSTaskRole": {
      "Description": "The arn of the task role ",
      "Condition": "UseFargateCondition",
      "Value": {
        "Ref": "TaskIAMRole"
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-ECSTaskRole"
        }
      }
    },
    "ECSTaskExecutionRole": {
      "Description": "The arn of the execution role of the task",
      "Condition": "UseFargateCondition",
      "Value": {
        "Ref": "TaskIAMExecutionRole"
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-ECSTaskExecutionRole"
        }
      }
    }
  }
}
